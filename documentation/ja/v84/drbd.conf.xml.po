"# implicit single volume without \"volume 0 {}\" block\n"
"DEVICE=drbd<minor>\n"
"SYMLINK_BY_RES=drbd/by-res/<resource-name>\n"
"\n"
"# explicit volume definition: volume VNR { }\n"
"DEVICE=drbd<minor>\n"
"SYMLINK_BY_RES=drbd/by-res/<resource-name>/VNR\n"
