## Enabling bitmap (running=no, config=default yes) schedules disk-options
## at CFG_DISK_PREP_UP, which runs BEFORE new-peer (CFG_NET_PREP_UP).

$ FAKE_DRBDSETUP_SHOW=drbdsetup_show_bitmap_enable.txt ./drbdadm -c ./adjust_bitmap_enable.res adjust -d r0 2>/dev/null
drbdsetup disk-options 1 --set-defaults
drbdsetup new-peer r0 1 --_name=peer1
drbdsetup new-path r0 1 ipv4:10.0.0.1:7789 ipv4:10.0.0.2:7789
drbdsetup connect r0 1
